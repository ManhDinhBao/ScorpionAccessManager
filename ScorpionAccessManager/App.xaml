<Application x:Class="ScorpionAccessManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:ScorpionAccessManager.View"
             xmlns:viewModels="clr-namespace:ScorpionAccessManager.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:CardViewModel}">
            <views:CardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:CardHolderViewModel}">
            <views:CardHolderView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:DeviceViewModel}">
            <views:DeviceView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:DoorViewModel}">
            <views:DoorView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ScheduleViewModel}">
            <views:ScheduleView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:RightViewModel}">
            <views:RightView/>
        </DataTemplate>
    </Application.Resources>
</Application>
